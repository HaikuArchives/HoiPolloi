	change_hcountry(newcountry$)
elseif msg$(i) = "ch_wcountry_" then
	change_wcountry(newcountry$)
elseif msg$(i) = "ch_bcountry_" then
	change_hcountry(newcountry$)
	change_wcountry(newcountry$)
endif
printdata()
end sub
