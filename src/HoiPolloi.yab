for f = 2 to 7
	read msg$
	sys_string$ = "rmattr META:" + msg$ + " \"" + dropped2$ + "\""
	system(sys_string$)
	sys_string$ = "addattr META:" + msg$ + " \"" + person1$(f)  + "\" \"" + dropped2$ + "\""
	system(sys_string$)
next f
	getaddressHM(dropped2$, "Dropview2")
end sub
